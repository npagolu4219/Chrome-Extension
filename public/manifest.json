  {
    "manifest_version": 2,
    "name": "muffins",
    "version": "1.0",
    "description": "Chrome Extension to highlight HTML elements in Shadow DOM",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],

    "background": {
        "service_worker": "background.js"
      },
    "browser_action": {
      "default_icon": "favicon.ico",
      "default_popup": "popup.html"
    }
  }
  