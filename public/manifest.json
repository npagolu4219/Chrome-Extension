  
  {
    "manifest_version": 3,
    "name": "Your Extension Name",
    "version": "1.0",
    "description": "muffins",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "favicon.ico",
        "48": "favicon.ico",
        "128": "favicon.ico"
      }
    },
      "background": {
        "service_worker": "background.js"
      },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ]
  }