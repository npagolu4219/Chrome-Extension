 {
    "manifest_version": 3,
    "name": "Your Extension",
    "version": "1.0",
    "description": "Your extension description",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "favicon.ico"
    }
  }